.PHONY: help build install clean test run dev lint fmt deps

# Variables
BINARY_NAME=apilo
VERSION=2.0.0
BUILD_DIR=bin
INSTALL_PATH=$(HOME)/go/bin

# Build flags
LDFLAGS=-ldflags="-w -s"

help: ## Show this help message
	@echo 'Usage: make [target]'
	@echo ''
	@echo 'Available targets:'
	@awk 'BEGIN {FS = ":.*?## "} /^[a-zA-Z_-]+:.*?## / {printf "  %-15s %s\n", $$1, $$2}' $(MAKEFILE_LIST)

build: ## Build the CLI binary
	@echo "ğŸ”¨ Building $(BINARY_NAME)..."
	@mkdir -p $(BUILD_DIR)
	@go build $(LDFLAGS) -o $(BUILD_DIR)/$(BINARY_NAME) .
	@echo "âœ… Build complete: $(BUILD_DIR)/$(BINARY_NAME)"

install: build ## Build and install globally
	@echo "ğŸ“¦ Installing $(BINARY_NAME) to $(INSTALL_PATH)..."
	@go install $(LDFLAGS)
	@echo "âœ… Installation complete!"
	@echo ""
	@echo "Run 'apilo --help' to get started"

clean: ## Clean build artifacts
	@echo "ğŸ§¹ Cleaning build artifacts..."
	@rm -rf $(BUILD_DIR)
	@go clean
	@echo "âœ… Clean complete"

test: ## Run tests
	@echo "ğŸ§ª Running tests..."
	@go test -v ./...
	@echo "âœ… Tests complete"

test-coverage: ## Run tests with coverage
	@echo "ğŸ§ª Running tests with coverage..."
	@go test -v -cover -coverprofile=coverage.out ./...
	@go tool cover -html=coverage.out -o coverage.html
	@echo "âœ… Coverage report: coverage.html"

run: build ## Build and run locally
	@echo "ğŸš€ Running $(BINARY_NAME)..."
	@./$(BUILD_DIR)/$(BINARY_NAME)

dev: ## Run in development mode (no build)
	@echo "ğŸš€ Running in dev mode..."
	@go run main.go

lint: ## Run linter
	@echo "ğŸ” Running linter..."
	@golangci-lint run || echo "âš ï¸  golangci-lint not installed. Run: brew install golangci-lint"

fmt: ## Format code
	@echo "ğŸ¨ Formatting code..."
	@go fmt ./...
	@echo "âœ… Format complete"

deps: ## Download dependencies
	@echo "ğŸ“¦ Downloading dependencies..."
	@go mod download
	@go mod tidy
	@echo "âœ… Dependencies updated"

verify: lint test ## Verify code quality and tests
	@echo "âœ… Verification complete"

release: clean verify build ## Build release version
	@echo "ğŸ“¦ Creating release v$(VERSION)..."
	@mkdir -p release
	@cp $(BUILD_DIR)/$(BINARY_NAME) release/$(BINARY_NAME)-v$(VERSION)
	@tar -czf release/$(BINARY_NAME)-v$(VERSION).tar.gz -C $(BUILD_DIR) $(BINARY_NAME)
	@echo "âœ… Release created: release/$(BINARY_NAME)-v$(VERSION).tar.gz"

docker-build: ## Build Docker image
	@echo "ğŸ³ Building Docker image..."
	@docker build -t $(BINARY_NAME):$(VERSION) .
	@echo "âœ… Docker image built: $(BINARY_NAME):$(VERSION)"

all: clean deps build test install ## Clean, deps, build, test, and install
	@echo "âœ… All tasks complete!"

# Default target
.DEFAULT_GOAL := help
